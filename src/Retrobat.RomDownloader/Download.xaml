<Window x:Class="RetroBat.Download"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Download" Background="Black">
    <StackPanel>
        <Label Foreground="AliceBlue" FontSize="50" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center">Downloading...</Label>
        <Label Name="Progress" Foreground="AliceBlue" FontSize="50" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center">0%</Label>
    </StackPanel>
</Window>
